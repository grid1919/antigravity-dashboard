# Antigravity Dashboard Configuration
# Copy this file to .env and configure

# =============================================================================
# REQUIRED: Google OAuth Credentials
# =============================================================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
# APIs & Services > Credentials > Create OAuth Client ID

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# =============================================================================
# OPTIONAL: Security
# =============================================================================
# If set, enables network access with Bearer token authentication
# Leave unset for localhost-only access (no auth required)
# DASHBOARD_SECRET=your-secret-key

# =============================================================================
# OPTIONAL: Server Configuration
# =============================================================================
DASHBOARD_PORT=3456
# DB_PATH=/custom/path/to/usage.db
DATA_RETENTION_DAYS=30
AUTO_CLEANUP_ON_START=false
LOG_LEVEL=info

# =============================================================================
# OPTIONAL: WebSocket Configuration
# =============================================================================
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# =============================================================================
# OPTIONAL: API Configuration
# =============================================================================
API_RATE_LIMIT=100
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# OPTIONAL: Development
# =============================================================================
DEV_MODE=false
